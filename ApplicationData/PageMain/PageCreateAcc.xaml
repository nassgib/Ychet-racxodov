<Page x:Class="Ychet_racxodov.ApplicationData.PageMain.PageCreateAcc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ychet_racxodov.ApplicationData.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCreateAcc">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Left" Height="344" VerticalAlignment="Top" Width="512" Background="#FFEBC2F9" Margin="158,0,0,0"/>
        <StackPanel HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="500" Margin="158,33,0,0" Background="#FFEBC2F9"/>
        <StackPanel HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="500" Margin="158,96,0,0" Background="#FFEBC2F9"/>
        <StackPanel HorizontalAlignment="Left" Height="98" VerticalAlignment="Top" Width="500" Margin="158,161,0,0" Background="#FFEBC2F9"/>
        <StackPanel HorizontalAlignment="Left" Height="41" VerticalAlignment="Top" Width="500" Margin="158,279,0,0" Background="#FFEBC2F9" RenderTransformOrigin="0.498,-0.361">
            <StackPanel Height="65"/>
        </StackPanel>

        <Button x:Name="btnBack" Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Width="136" Margin="467,279,0,0" Height="41" Click="Button_Click" Background="#FFA112E4" FontSize="14" FontWeight="Bold"/>
        <Button x:Name="btnCreate" Content="Создать" HorizontalAlignment="Left" VerticalAlignment="Top" Width="136" Margin="224,279,0,0" Height="41" Background="#FFA112E4" FontSize="14" FontWeight="Bold" Click="btnCreate_Click"/>

        <TextBox HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" Text="Введите имя" VerticalAlignment="Top" Background="#FFEBC2F9" Width="188" Margin="172,33,0,0" FontSize="20" TextAlignment="Center" BorderBrush="#FFEBC2F9"/>
        <TextBox HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" Text="Введите логин" VerticalAlignment="Top" Background="#FFEBC2F9" Width="188" Margin="172,96,0,0" FontSize="20" TextAlignment="Center" BorderBrush="#FFEBC2F9"/>
        <TextBox HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" Background="#FFEBC2F9" Width="188" Margin="172,161,0,0"  FontSize="20" TextAlignment="Center" BorderBrush="#FFEBC2F9"/>
        <PasswordBox x:Name="psbPass" HorizontalAlignment="Left" VerticalAlignment="Top" Height="36" Width="188" Margin="443,223,0,0" Background="White" PasswordChanged="PasswordBox_PasswordChanged"/>
        <TextBox x:Name="txbName" HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" Margin="443,33,0,0" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="txbPass" HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" RenderTransformOrigin="2.283,3.783" Margin="443,161,0,0" TextChanged="txbPass_TextChanged"/>
        <TextBox x:Name="txbLogin" HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" Margin="443,96,0,0"/>



    </Grid>
</Page>
