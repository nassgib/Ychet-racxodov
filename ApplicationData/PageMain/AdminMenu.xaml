<Page x:Class="Ychet_racxodov.ApplicationData.PageMain.AdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ychet_racxodov.ApplicationData.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMenu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btnOtd" Content="Отделы" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Width="250" Height="60" Background="#FFA112E4" Foreground="White" FontSize="20" FontWeight="Bold" BorderBrush="White" Click="btnOtd_Click"/>
        <Button x:Name="btnRacx" Content="Расходы" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Width="250" Height="60" Background="#FFA112E4" Foreground="White" FontSize="20" FontWeight="Bold" BorderBrush="White" Click="btnRacx_Click"/>
        <Button x:Name="btnVid" Content="Виды расходов" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" Width="250" Height="60" Background="#FFA112E4" Foreground="White" FontSize="20" FontWeight="Bold" BorderBrush="White" Click="btnVid_Click"/>
        <Button x:Name="btnUser" Content="Пользователи" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Top" Width="250" Height="60" Background="#FFA112E4" Foreground="White" FontSize="20" FontWeight="Bold" BorderBrush="White" Click="btnUser_Click"/>
        <Button x:Name="btnRol" Content="Роли" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="5" VerticalAlignment="Top" Width="250" Height="60" Background="#FFA112E4" Foreground="White" FontSize="20" FontWeight="Bold" BorderBrush="White" Click="btnRol_Click"/>

    </Grid>
</Page>
