<Page x:Class="Ychet_racxodov.ApplicationData.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ychet_racxodov.ApplicationData.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid Background="#FFFEFBFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="136" Margin="63,0,0,0" Grid.Row="1" FontWeight="Bold" FontSize="18"><Run Text="Введите "/><Run Text="логин"/></TextBlock>
        <TextBlock Grid.Column="1" Margin="63,1,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.47,-0.699" Width="147" Height="29" FontWeight="Bold" FontSize="18" Text="Введите пароль" HorizontalAlignment="Left"/>
        <TextBox x:Name="tbLogin" Grid.Column="1" HorizontalAlignment="Left" Height="46" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" RenderTransformOrigin="-0.897,-0.455" Margin="10,0,0,0" SelectionBrush="#FFA112E4" BorderBrush="#FFA112E4" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="btnAvtor" Content="Войти" HorizontalAlignment="Left" Margin="50,10,0,0" Grid.Row="5" VerticalAlignment="Top" Width="171" Height="40" Background="#FFA112E4" Foreground="White" FontWeight="Bold" FontSize="16" Click="Button_Click" Grid.Column="1"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Margin="10,4,0,0" Grid.Row="4" VerticalAlignment="Top" Width="247" RenderTransformOrigin="1.474,0.82" Grid.Column="1" Height="46" Foreground="#FFA112E4" BorderBrush="#FFA112E4"/>
        <Button x:Name="btnRegis" Content="Регистрация" HorizontalAlignment="Left" VerticalAlignment="Top" Width="171" Grid.Row="6" Height="40" Grid.Column="1" Background="#FFA112E4" Foreground="White" FontSize="16" FontWeight="Bold" Click="btnRegis_Click" Margin="50,0,0,0"/>

    </Grid>
</Page>
